<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Online shop</title>
    <link rel="stylesheet" href="css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>

<body>
<div class="page">
    <div class="content">
        <header class="header">
            <div class="header__number number">7h3 5h0p
            </div>
            <div class="header__logo logo">
                <img class="logo_img" src="img/oggetto_logo.svg">
            </div>
            <div class="header__phone phone">+7 (812) 2•12•85•06
            </div>

        </header>


        <div class="h-menu">
            <% const menu = ['LISP', 'OCaml', 'JavaScript', 'Python', 'PHP'] %>
            <div class="menu">
                <ul class="menu__list">
                    <% menu.forEach(function(item, i) { %>
                    <li class="menu__item">
                        <a href="#" class="menu__link"><%= item %></a>
                    </li>
                    <% }); %>
                </ul>
            </div>
            <form action="//google.com/search" class="h-menu__search search">
                <input type="search" class="search_input" placeholder="">
                <input type="image" class="search_img" src="img/search.svg">
            </form>
        </div>

        <div class="breadcrumbs">
            <% const bread = ['LISP', 'Одежда', 'Футболки'] %>
            <div class="breadcrumbs-menu">
                <ul class="breadcrumbs-menu__list">
                    <% bread.forEach(function (item, index) { %>
                    <li class="breadcrumbs-menu__item">
                        <a href="#" class="breadcrumbs-menu__link"><%= item %></a>
                        <% if(index < (bread.length - 1)) { %>
                        <span class="breadcrumbs-menu__slash">/</span>
                        <% } %>
                    </li>

                    <% }) %>
                </ul>

            </div>

        </div>

        <div class="product">
            <div class="product__img">
                <img class="product__img_pict" id="img__id" src="img/tshirt_white.jpg">
            </div>

            <form action="#" class="product__info info" method="post">
                <h2 class="info__name">Футболка Alien technology</h2>
                <p class="info__composition">Состав: 100% хлопок, динамическая типизация, польская нотация.
                    Производство: Россия</p>
                <p class="info__price">1500₽</p>
                <p class="info__size-text">Размер:</p>
                <ul class="info__size size">
                    <li class="size__b-size"
                        data-type="size"
                        data-value="S">S
                    </li>
                    <li class="size__b-size"
                        data-type="size"
                        data-value="M">M
                    </li>
                    <li class="size__b-size"
                        data-type="size"
                        data-value="L">L
                    </li>
                </ul>

                <p class="info__color-text">Цвет:</p>
                <ul class="info__color color">
                    <li class="color__size color__1"
                        data-type="color"
                        data-value="white">
                    </li>
                    <li class="color__size color__2"
                        data-type="color"
                        data-value="yellow">
                    </li>
                    <li class="color__size color__3"
                        data-type="color"
                        data-value="green">
                    </li>
                </ul>
                   <button class="info__buy" autofocus>Купить</button>
                <div class="info__heart heart">
                    <img class="heart__img icon" src="img/heart.svg">
                    <a href="#" class="heart__defer">Отложить на потом</a>
                </div>

            </form>
        </div>
    </div>
    <footer class="footer">
        <div class="footer__page">
            <div class="footer__service service">
                <h3 class="service__header">
                    Сервис и поддержка
                </h3>
                <% const service = ['Как сделать заказ', 'Возврат товара', 'Публичная оферта', 'Доставка',
                    'Способы оплаты', 'Правила продажи', 'Возврат денежных средств', 'Вопросы и ответы'] %>
                <div class="service__block block">
                    <ul class="block__list">
                        <% service.forEach(function(item) { %>
                        <li class="block__item">
                            <a href="#" class="block__link"><%= item %></a>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <div class="footer__about-us about-us">
                <h3 class="about-us__header">
                    О компании
                </h3>
                <% const about = ['О нас', 'Контакты', 'Вакансии', 'Партнерам',
                    'Сертификаты', 'Преимущества', 'Наши скидки'] %>
                <div class="about-us__part part">
                    <ul class="part__list">
                        <% about.forEach(function(item) { %>
                        <li class="part__item">
                            <a href="#" class="part__link"><%= item %></a>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <div class="footer__info info">
                <div class="info__link link">
                    <div class="info__delivery del">
                        <img class="del__img" src="img/delivery.svg">
                        <span class="del__text">бесплатная доставка от 4000 ₽</span>
                    </div>
                    <div class="link__gift gift">
                        <img class="gift__img" src="img/heart.svg">
                        <span class="gift__text">пробники в подарок при каждой покупке</span>
                    </div>
                    <div class="link__promotion prom">
                        <img class="prom__img" src="img/cup.svg">
                        <span class="prom__text">акции и подарки за покупку</span>
                    </div>

                </div>

            </div>
            <div class="footer__social social">
                <a href="#"> <img class="social__icon social__icon_facebook" src="img/facebook.svg"></a>
                <a href="#"><img class="social__icon social__icon_twitter" src="img/twitter.svg"></a>
                <a href="#"><img class="social__icon social__icon_instagram" src="img/instagram.svg"></a>
            </div>
        </div>
        <hr class="footer__line">
        <p class="footer__end">2005-2017 © 7h35h0p.ru — модный интернет-магазин одежды, обуви и аксессуаров.<br>
            Все права защищены. Доставка по всей России!</p>

    </footer>

</div>
<script src="js/scripts.js" type="text/javascript"></script>
</body>
</html>
